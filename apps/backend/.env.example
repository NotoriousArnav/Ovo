# Ovo Backend — Environment Variables
# Copy this file to .env and fill in the values

# Database (NeonDB)
DATABASE_URL="postgresql://user:password@host.neon.tech/ovo?sslmode=require"

# JWT Secrets (generate with: openssl rand -hex 64)
JWT_ACCESS_SECRET="your-access-secret-here"

# CORS
CORS_ORIGIN="*"

# Server
PORT=3001
NODE_ENV=development
BASE_URL="https://ovo-backend.vercel.app"

# Event Horizon OAuth2
EH_CLIENT_ID="your-eventhorizon-client-id"
EH_CLIENT_SECRET="your-eventhorizon-client-secret"
EH_URL="https://events.neopanda.tech"
EH_ALLOWED_REDIRECTS="http://localhost:5173/auth/eventhorizon/callback,ovo://auth/callback,https://ovo-tm.netlify.app/auth/eventhorizon/callback"

# AI Features
# Uses LangChain + Groq to generate ADHD-friendly daily task summaries.
# Only GROQ_API_KEY is required — everything else has sensible defaults.
# Get a free key at: https://console.groq.com
AI_PROVIDER="groq"                      # LLM provider (only "groq" supported currently)
AI_MODEL="llama-3.3-70b-versatile"      # Model to use (default: llama-3.3-70b-versatile)
GROQ_API_KEY="gsk_your-groq-api-key-here"  # Required — AI features return 503 without this

# AI Rate Limiting (per-user, prevents abuse)
AI_RATE_LIMIT_ENABLED=true              # Set to false to disable rate limiting
AI_RATE_LIMIT_MAX=20                    # Max requests per window per user
AI_RATE_LIMIT_WINDOW_MS=3600000         # Window size in ms (default: 1 hour)
